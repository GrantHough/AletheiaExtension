{
    "name": "Aletheia",
    "description": "Verify the veracity of text, powered by AI",
    "manifest_version": 3,
    "version": "0.0.0.1",
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}